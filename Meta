dzil:
  nomm: 1
  postamble: |
    [MakeMaker::Awesome]
    delimiter = |
    footer = |package MY;
    footer = |sub postamble {
    footer = |    my $self = shift;
    footer = |    $self->SUPER::postamble .
    footer = |    ( $^O eq 'MSWin32' )
    footer = |    ? <<'...'
    footer = |PATH := blib\script;$(PATH)
    footer = |export PATH
    footer = |...
    footer = |    : <<'...';
    footer = |PATH := blib/script:$(PATH)
    footer = |export PATH
    footer = |...
    footer = |}
